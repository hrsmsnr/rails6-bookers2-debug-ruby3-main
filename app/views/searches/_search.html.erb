<div class="row">
	<div class="mx-auto">
		<% if user_signed_in? %>
			<div class="search_form">
				<%= form_with url: search_path, method: :get do |f| %>
					<%= f.text_field :keyword %>
					<%= f.select :kinds, options_for_select([['User'],['Book']]) %>
					<%= f.select :accuracy, options_for_select([["完全一致","perfect_match"],["前方一致","forward_match"],["後方一致","backward_match"],["部分一致","partial_match"]]) %>
					<%= f.submit "検索" %>
				<% end %>
			</div>
		<% end %>
	</div>
</div>